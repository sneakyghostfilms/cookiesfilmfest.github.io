---
interface TimelineItem {
  title: string;
  date: string;
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="timeline">
  {items.map((item) => (
    <div class="timeline-item">
      <div class="timeline-dot"></div>
      <div class="timeline-content">
        <h4 class="timeline-title">{item.title}</h4>
        <p>{item.date}</p>
      </div>
    </div>
  ))}
</div>

<style>
  .timeline {
    margin: 2rem 0;
  }

  .timeline-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .timeline-dot {
    width: 20px;
    height: 20px;
    background-color: var(--color-primary);
    border-radius: 50%;
    margin-top: 0.25rem;
    flex-shrink: 0;
  }

  .timeline-content {
    flex: 1;
  }

  .timeline-title {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--color-secondary);
    margin-bottom: 0.25rem;
  }
</style>
