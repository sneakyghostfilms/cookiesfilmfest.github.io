---
import { Image } from 'astro:assets';
import cookieTableImage from '../assets/cookie-table.jpg';
import filmFestivalText from '../assets/cookies-and-comedy-text.svg';
---
<section class="relative h-screen">
  <div class="relative h-full w-full">
    <Image src={cookieTableImage} alt="Cookie Table" class="w-full h-full object-cover" />
    <div class="overlay"></div>
    <Image src={filmFestivalText} alt="Film Festival" class="absolute center top-half left-half" />
    <div class="absolute bottom-60 w-full text-center text-3xl text-white font-caveat">
      Come for the laughs! Stay for the cookies!
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }
    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    #splash-bg-fallback {
      display: block;
    }
  }

  .gradient-text {
    background: linear-gradient(45deg, #ff8a00, #e52e71);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: 'Caveat', 'Comic Sans MS', cursive;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    padding: 1.25rem;
  }

  .absolute {
    position: absolute;
  }

  .center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .top-half {
    top: 50%;
  }

  .left-half {
    left: 50%;
  }

  .overlay {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.25);
    backdrop-filter: blur(2px);
  }

  .font-caveat {
    font-family: 'Caveat', 'Comic Sans MS', cursive;
  }
</style>