    background-color: rgba(215, 155, 88, 0.8);
    color: var(--color-secondary);
    box-shadow: var(--shadow-md);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
    padding: 0.5rem;
    backdrop-filter: blur(3px);
    border: 1px solid rgba(215, 155, 88, 1);
  }
  
