---
import venueMap from '../assets/venue-map.png';
---

<section id="map-section" class="map-section">
  <h2 class="map-title">Map to the Row House Cinema</h2>
  <div class="map-container">
    <img src={venueMap.src} alt="Venue map showing the general location of the Row House Cinema" width="756" height="505" />
  </div>
</section>

<style>
  .map-section {
    padding: 2rem;
    text-align: center;
  }

  .map-title {
    font-family: 'Caveat', cursive;
    font-size: 2rem;
    font-weight: bold;
    color: #f97316; /* Orange color */
    margin-bottom: 1.5rem;
  }

  .map-container {
    display: inline-block;
    border: 2px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
  }

  .map-container img {
    display: block;
    max-width: 100%;
    height: auto;
  }
</style>
