<div class="contact-form">
  <form id="contactForm" action="#" method="post" class="form-container">
    <div class="form-group">
      <label for="name" class="form-label">Name</label>
      <input type="text" id="name" name="name" required class="form-input" placeholder="Your name">
    </div>
    
    <div class="form-group">
      <label for="email" class="form-label">Email</label>
      <input type="email" id="email" name="email" required class="form-input" placeholder="Your email address">
    </div>
    
    <div class="form-group">
      <label for="subject" class="form-label">Subject</label>
      <input type="text" id="subject" name="subject" class="form-input" placeholder="What's this about?">
    </div>
    
    <div class="form-group">
      <label for="message" class="form-label">Message</label>
      <textarea id="message" name="message" rows="5" required class="form-textarea" placeholder="Your message"></textarea>
    </div>
    
    <div class="form-submit">
      <button type="submit" class="form-button">
        <span class="button-text">Send Message</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-send">
          <line x1="22" y1="2" x2="11" y2="13"></line>
          <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
        </svg>
      </button>
    </div>
  </form>
</div>

<style>
  .contact-form {
    max-width: 100%;
    padding: 2rem;
    background-color: rgba(255, 255, 255, 0.4);
    border-radius: 1rem;
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
    border: 1px solid rgba(215, 155, 88, 0.1);
  }
  
  .contact-form:hover {
    box-shadow: var(--shadow-lg);
    background-color: rgba(255, 255, 255, 0.5);
  }

  .form-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-weight: 600;
    font-size: 1rem;
    color: var(--color-secondary);
  }

  .form-input, .form-textarea {
    padding: 0.75rem 1rem;
    border: 2px solid rgba(215, 155, 88, 0.2);
    border-radius: 0.5rem;
    background-color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    font-family: 'Fredoka', sans-serif;
    font-size: 1rem;
  }
  
  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-input:focus, .form-textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    background-color: white;
    box-shadow: 0 0 0 3px rgba(215, 155, 88, 0.2);
  }
  
  .form-input::placeholder, .form-textarea::placeholder {
    color: #9a8c7e;
    opacity: 0.7;
  }

  .form-submit {
    margin-top: 0.5rem;
  }

  .form-button {
    background-color: rgba(215, 155, 88, 0.3);
    color: var(--color-secondary);
    border: 1px solid rgba(215, 155, 88, 0.5);
    padding: 0.85rem 1.75rem;
    font-family: 'Fredoka', sans-serif;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 2rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-md);
    display: flex;
    align-items: center;
    gap: 0.75rem;
    justify-content: center;
  }

  .form-button:hover {
    background-color: rgba(215, 155, 88, 0.5);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .form-button:active {
    transform: translateY(1px);
    box-shadow: var(--shadow-sm);
  }

  /* Animation for button */
  .form-button svg {
    transition: transform 0.3s ease;
  }
  
  .form-button:hover svg {
    transform: translateX(4px);
  }
  
  @media (max-width: 768px) {
    .contact-form {
      padding: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        // Here you would typically send the form data to your server
        // For now, let's just show an alert
        alert('Thank you for your message! We will get back to you soon.');
        form.reset();
      });
    }
  });
</script>
  