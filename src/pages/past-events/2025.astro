---
import { festival2025, awardCategories2025 } from "../../data/festival2025.js";

// Custom filter component for film blocks with the FilmBox component
const scheduleBlocks = festival2025.blocks;
---

<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />

    <title>Cookies & Comedy Film Festival - Past Event 2025</title>
    <meta name="description" content="Archive of the 2025 Cookies & Comedy Film Festival in Pittsburgh" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
      /* Reset and base styles */
      *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      :root {
        --color-primary: #d79b58; /* Soft brown/golden cookie hue */
        --color-secondary: #2b2244; /* Warm navy/dark blueberry */
        --color-text: #221a35; /* Darker text color for better readability */
        --color-text-offset: #4a3968; /* Slightly darker version for better contrast */
        --color-background: #ffffff; /* White background for clean look */
        --color-background-offset: #fbe3c4; /* Light cookie-dough beige for content boxes */
        --color-background-darker: #f5d6a8; /* Slightly darker beige for additional contrast */
        --color-border: #d79b58; /* Cookie brown for borders */
      }
      
      body {
        font-family: 'Fredoka', sans-serif;
        background-color: var(--color-background);
        color: var(--color-text);
        line-height: 1.5;
        font-weight: 500; /* Increased from default */
      }
      
      a {
        color: var(--color-secondary);
        text-decoration: none;
        font-weight: 600;
      }
      
      a:hover {
        color: var(--color-primary);
      }
      
      /* Container */
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
      }
      
      /* Header */
      header {
        text-align: center;
        margin-bottom: 3rem;
        padding-top: 2rem;
      }
      
      .page-title {
        font-size: 3rem;
        color: var(--color-secondary);
        margin-bottom: 1rem;
        letter-spacing: 0.01em;
      }
      
      .page-subtitle {
        font-size: 1.5rem;
        color: var(--color-primary);
        margin-bottom: 2rem;
        letter-spacing: 0.01em;
      }
      
      .back-link {
        display: inline-block;
        background-color: var(--color-primary);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 2rem;
        margin-top: 1rem;
        font-weight: 600;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
      }
      
      .back-link:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        background-color: #c68c4a;
        color: white;
      }
      
      /* Highlights section */
      .highlights-section {
        background-color: var(--color-background-offset);
        padding: 2rem;
        border-radius: 1rem;
        margin-bottom: 3rem;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(215, 155, 88, 0.1);
      }
      
      .highlights-container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-bottom: 2rem;
      }
      
      .highlights-text {
        flex: 1;
      }
      
      .highlights-image {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      
      .highlights-img {
        max-width: 100%;
        height: auto;
        border-radius: 1rem;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        object-fit: cover;
        aspect-ratio: 16/9;
      }
      
      .image-caption {
        font-size: 0.9rem;
        font-style: italic;
        text-align: center;
        margin-top: 0.75rem;
        max-width: 90%;
        margin-left: auto;
        margin-right: auto;
        font-weight: 500; /* Increased for readability */
        line-height: 1.4;
      }
      
      .highlight-subtitle {
        font-size: 1.8rem;
        color: var(--color-secondary);
        margin-bottom: 1.5rem;
        letter-spacing: 0.01em;
      }
      
      .highlight-description {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
      }
      
      .highlight-box {
        margin-bottom: 1.5rem;
        padding: 1.25rem;
        background-color: rgba(255, 255, 255, 0.5);
        border-radius: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      
      .highlight-box-title {
        font-size: 1.4rem;
        color: var(--color-secondary);
        margin-bottom: 1rem;
        text-align: center;
        letter-spacing: 0.01em;
      }
      
      .awards-recap {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
      }
      
      .award {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
      }
      
      .award-category {
        font-weight: 700;
        color: var(--color-secondary);
      }
      
      .award-winner {
        font-size: 0.95rem;
        font-weight: 500; /* Increased for readability */
      }
      
      .award-winner span {
        font-style: italic;
        font-size: 0.9rem;
        color: var(--color-text-offset);
        font-weight: 500; /* Increased for readability */
      }
      
      .hosts-list {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        align-items: center;
      }
      
      .hosts-list li {
        background-color: var(--color-primary);
        color: white;
        padding: 0.5rem 1.25rem;
        border-radius: 2rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      /* Schedule section */
      .schedule-section {
        background-color: var(--color-background-offset);
        padding: 2rem;
        border-radius: 1rem;
        margin-bottom: 3rem;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(215, 155, 88, 0.1);
      }
      
      .section-title {
        font-size: 2.5rem;
        color: var(--color-secondary);
        text-align: center;
        margin-bottom: 2rem;
        letter-spacing: 0.01em;
      }
      
      .schedule-intro {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 1.1rem;
        font-weight: 500; /* Increased for readability */
      }
      
      /* Schedule blocks */
      .schedule-block {
        background: linear-gradient(145deg, var(--color-primary), #c68c4a);
        border-radius: 1rem;
        margin-bottom: 2rem;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: white;
      }
      
      .schedule-block:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
      }
      
      .block-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: rgba(255, 255, 255, 0.15);
        padding: 1rem 1.5rem;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.3);
      }
      
      .block-info {
        flex: 1;
      }
      
      .block-title {
        font-size: 1.5rem;
        color: white;
        margin-bottom: 0.25rem;
        font-weight: 600;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
      }
      
      .block-time {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
      }
      
      .host-image {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        object-position: center top;
        border: 3px solid var(--color-primary);
      }


      .kayleigh-img.host-image {
        object-position: 30% 30%;
      }
      
      /* Special positioning for Derek in schedule section */
      .derek-img.host-image {
        object-position: center 80%;
      }
      
      /* Hosts section */
      .hosts-section {
        background-color: var(--color-background-offset);
        padding: 2rem;
        border-radius: 1rem;
        margin-bottom: 3rem;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(215, 155, 88, 0.1);
      }
      
      .hosts-intro {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 1.1rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
      }
      
      .hosts-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 2rem;
        justify-items: center;
      }
      
      .host-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.5);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
      }
      
      /* Host card images using background approach for better control */
      .host-card-image-container {
        width: 220px;
        height: 320px; /* Maintain oval proportions */
        border-radius: 50% / 35%; /* More oval-like shape */
        margin-bottom: 1.5rem;
        border: 6px solid var(--color-primary);
        background-size: cover;
      }
      
      /* Specific positioning for each comedian */
      .derek-image {
        background-position: 45% 100%;
        background-size: 140%;
      }

      .amir-image {
        background-position: center 0%;
        background-size: 310%;
      }

      .kayleigh-image {
        background-position: 42% 30%;
        background-size: 280%;
      }

      @media (max-width: 768px) {
        .host-card-image-container {
          width: 180px;
          height: 260px;
        }
      }
      
      .host-details {
        margin-top: 0.5rem;
      }
      
      .host-name {
        font-size: 1.5rem;
        color: var(--color-secondary);
        margin-bottom: 0.5rem;
      }
      
      .host-block {
        font-size: 1rem;
        color: var(--color-text);
        font-style: italic;
      }
      
      /* Kickoff and divider sections */
      .kickoff-section {
        text-align: center;
        padding: 1rem;
        font-weight: 600;
        background-color: rgba(255, 255, 255, 0.15);
        color: white;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }
      
      /* Film grid styling */
      .film-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        padding: 1rem;
        background-color: rgba(255, 255, 255, 0.1);
        margin-bottom: 0;
      }
      
      .section-divider {
        text-align: center;
        padding: 0.75rem;
        font-style: italic;
        font-weight: 600;
        background-color: rgba(255, 255, 255, 0.15);
        margin: 0;
        color: white;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }
      
      .qa-section {
        text-align: center;
        padding: 1rem;
        font-style: italic;
        background-color: rgba(255, 255, 255, 0.1);
        border-bottom-left-radius: 1rem;
        border-bottom-right-radius: 1rem;
        color: rgba(255, 255, 255, 0.9);
      }
      
      /* Awards section */
      .awards-section {
        background-color: var(--color-background-offset);
        padding: 2rem;
        border-radius: 1rem;
        margin-bottom: 3rem;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(215, 155, 88, 0.1);
      }
      
      .awards-explanation {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 1.1rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        font-weight: 500; /* Increased for readability */
      }
      
      .awards-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
      
      .award-card {
        background: linear-gradient(145deg, var(--color-primary), #c68c4a);
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        color: white;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        position: relative;
        overflow: hidden;
        border: none;
      }
      
      .award-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      }
      
      .award-card::before {
        content: "🏆";
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 1.5rem;
        opacity: 0.2;
        z-index: 0;
      }
      
      .award-category-title {
        font-size: 1.5rem;
        color: white;
        margin-bottom: 1rem;
        text-align: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        padding-bottom: 0.5rem;
        letter-spacing: 0.01em;
        position: relative;
        z-index: 1;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
      }
      
      .category-awards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      
      .award-item {
        padding: 0.75rem;
        border-radius: 0.5rem;
        background-color: rgba(32, 22, 16, 0.9); /* Dark chocolate color */
        transition: background-color 0.2s ease;
        border: 1px solid rgba(255, 255, 255, 0.3);
      }
      
      .award-item:hover {
        background-color: rgba(46, 30, 18, 0.95);
      }
      
      .award-title {
        font-weight: 700;
        color: white;
        margin-bottom: 0.25rem;
        font-size: 1.05rem;
      }
      
      .award-winner-name {
        font-size: 1.2rem;
        font-weight: 600;
        color: white;
        margin-bottom: 0.25rem;
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
      }
      
      .award-creator-name {
        font-size: 0.9rem;
        font-style: italic;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 500;
      }

      /* Modal styles */
      .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.7);
      }

      .modal-content {
        background-color: var(--color-background);
        margin: 10% auto;
        padding: 2rem;
        border-radius: 1rem;
        width: 80%;
        max-width: 600px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        position: relative;
      }

      .close-button {
        position: absolute;
        top: 15px;
        right: 20px;
        font-size: 1.8rem;
        font-weight: bold;
        color: var(--color-secondary);
        cursor: pointer;
        transition: all 0.2s ease;
        line-height: 1;
      }

      .close-button:hover {
        color: var(--color-primary);
      }

      .film-modal-title {
        font-size: 2rem;
        color: var(--color-secondary);
        margin-bottom: 1rem;
        text-align: center;
      }

      .modal-detail {
        margin-bottom: 0.75rem;
      }

      .modal-detail strong {
        color: var(--color-secondary);
        font-weight: 700;
      }

      .modal-award {
        display: inline-block;
        background-color: var(--color-primary);
        color: white;
        font-size: 0.9rem;
        padding: 0.3rem 0.7rem;
        border-radius: 2rem;
        margin: 1rem 0;
      }

      .modal-synopsis {
        font-style: italic;
        margin-top: 1.25rem;
        border-top: 1px solid var(--color-border);
        padding-top: 1rem;
      }
      
      /* Responsive */
      @media (max-width: 768px) {
        .container {
          padding: 1rem;
        }
        
        .page-title {
          font-size: 2.5rem;
        }
        
        .section-title {
          font-size: 2rem;
        }
        
        .block-header {
          flex-direction: column;
          align-items: flex-start;
        }
        
        .film-grid {
          grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
          gap: 0.75rem;
        }
        
        .awards-grid {
          grid-template-columns: 1fr;
          gap: 1rem;
        }
        
        .award-card {
          padding: 1.25rem;
        }
        
        .highlights-container {
          flex-direction: column;
          align-items: center;
        }
        
        .modal-content {
          width: 90%;
          margin: 20% auto;
        }
        
        .hosts-container {
          grid-template-columns: 1fr;
          gap: 2rem;
        }
        
        .host-card-image {
          width: 280px;
          height: 280px;
        }
        
        .host-card {
          max-width: 320px;
          margin-left: auto;
          margin-right: auto;
        }
        
        .award-card.honorable-mentions .category-awards {
          grid-template-columns: 1fr;
        }
      }
      
      @media (min-width: 768px) {
        .highlights-container, .award-highlights {
          flex-direction: row;
          gap: 3rem;
        }
        
        .highlights-text, .award-highlights-text {
          flex: 1;
        }
        
        .highlights-image, .award-highlights-image {
          flex: 1;
        }
        
        .highlights-img {
          min-height: auto;
          width: 100%;
        }

        .awards-recap {
          grid-template-columns: 1fr 1fr;
        }

        .awards-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 1.5rem;
        }
      }
      
      @media (min-width: 992px) {
        .hosts-container {
          grid-template-columns: repeat(3, 1fr);
        }
        
        .awards-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 2rem;
        }
        
        .film-grid {
          grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        }
      }

      .schedule-button {
        background-color: #ff5c35;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        margin-top: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .award-card.honorable-mentions {
        grid-column: 1 / -1; /* Make it span full width */
      }
      
      .award-card.honorable-mentions .category-awards {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }

      .venue-info {
        text-align: center;
        margin-bottom: 2rem;
        font-weight: 600;
        font-size: 1.1rem;
        color: white;
        background: linear-gradient(145deg, var(--color-primary), #c68c4a);
        padding: 1rem;
        border-radius: 0.75rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        border: 1px solid rgba(255, 255, 255, 0.3);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <h1 class="page-title">Cookies & Comedy Film Festival</h1>
        <h2 class="page-subtitle">2025 Festival Archive</h2>
        <a href="/" class="back-link">Back to Main Site</a>
      </header>
      
      <section class="highlights-section">
        <div class="highlights-container">
          <div class="highlights-text">
            <p class="highlight-description">
              Our inaugural festival in 2025 was a tremendous success! Hosted at the intimate Row House Cinema in Lawrenceville, we showcased over 30 comedy films from around the world, hosted by Pittsburgh's top standup comedians. Festival Director Scott Danzig baked hundreds of homemade cookies that were enjoyed throughout the event, facilitated Q&A sessions with attending filmmakers, and recorded audience reactions for each film as special mementos that were sent to all creators, connecting even those who couldn't attend in person with our enthusiastic audience.
            </p>
          </div>
          
          <div class="highlights-image">
            <img 
              src="/assets/2025-event-photos/audience-4.jpeg" 
              alt="2025 Cookies & Comedy Film Festival Audience" 
              class="highlights-img"
            />
            <div class="image-caption">
              Audience members enjoying the comedy shorts at our inaugural 2025 festival at Row House Cinema
            </div>
          </div>
        </div>
      </section>
      
      <!-- Renamed section from Festival Hosts to Featured Standup Comics -->
      <section class="hosts-section">
        <h2 class="section-title">Featured Standup Comics</h2>
        <p class="hosts-intro">
          Our 2025 festival blocks were hosted by these incredible local comedians who kept the audience laughing between films.
        </p>
        
        <div class="hosts-container">
          {scheduleBlocks.map((block) => (
            <div class="host-card">
              <div 
                class={`host-card-image-container ${
                  block.host === "Derek Minto" ? "derek-image" : 
                  block.host === "Amir Megheri" ? "amir-image" : 
                  block.host === "Kayleigh Dumas" ? "kayleigh-image" : ""
                }`}
                style={`background-image: url(${block.hostImage})`}
              ></div>
              <div class="host-details">
                <h3 class="host-name">{block.host}</h3>
              </div>
            </div>
          ))}
        </div>
      </section>
      
      <section class="schedule-section">
        <h2 class="section-title">Festival Schedule</h2>
        <p class="schedule-intro">
          Our 2025 festival featured 3 amazing blocks of comedy films, each hosted by talented local comedians. 
          Click on any film title to see more details.
        </p>
        <div class="venue-info">
          Venue: Row House Cinema, Pittsburgh, PA
        </div>
        
        {scheduleBlocks.map((block) => (
          <div class="schedule-block">
            <div class="block-header">
              <div class="block-info">
                <h3 class="block-title">{block.name}</h3>
                <p class="block-time">{block.time}</p>
              </div>
              <img 
                src={block.hostImage} 
                alt={block.host} 
                class={`host-image ${block.host === "Kayleigh Dumas" ? "kayleigh-img" : block.host === "Derek Minto" ? "derek-img" : ""}`} 
              />
            </div>
            
            <div class="kickoff-section">
              {block.kickoff}
            </div>
            
            {/* First part of films - before intermission */}
            <div class="film-grid">
              {block.films.slice(0, block.intermissionAfterFilm + 1).map((film, index) => (
                <div class="film-box" data-index={`${block.name.replace(/\s+/g, '-')}-${index}`}>
                  <div class="film-box-title">{film.title}</div>
                </div>
              ))}
            </div>
            
            <div class="section-divider">
              {block.intermission}
            </div>
            
            {/* Second part of films - after intermission */}
            <div class="film-grid">
              {block.films.slice(block.intermissionAfterFilm + 1).map((film, index) => (
                <div class="film-box" data-index={`${block.name.replace(/\s+/g, '-')}-${block.intermissionAfterFilm + 1 + index}`}>
                  <div class="film-box-title">{film.title}</div>
                </div>
              ))}
            </div>
            
            <div class="qa-section">
              {block.qa}
            </div>
          </div>
        ))}
        
        <div class="schedule-block">
          <div class="block-header">
            <div class="block-info">
              <h3 class="block-title">Awards Ceremony</h3>
              <p class="block-time">{festival2025.awardsInfo.ceremony}</p>
            </div>
          </div>
          <div class="kickoff-section">
            {festival2025.awardsInfo.description}
          </div>
        </div>
      </section>
      
      <section class="awards-section">
        <h2 class="section-title">Award Winners</h2>
        <p class="awards-explanation">
          Here are the award-winning films from our 2025 festival! Huge thanks to all the talented filmmakers who made this such a fantastic lineup.
        </p>
        
        <div class="awards-grid">
          {awardCategories2025.map((category) => (
            <div class={`award-card ${category.categoryName === "Honorable Mentions" ? "honorable-mentions" : ""}`}>
              <h3 class="award-category-title">{category.categoryName}</h3>
              <div class="category-awards">
                {category.awards.map((award) => (
                  <div class="award-item">
                    {award.title && <p class="award-title">{award.title}</p>}
                    <p class="award-winner-name">{award.winner}</p>
                    <p class="award-creator-name">{award.creator}</p>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>
    </div>
    
    {/* Create modal popups for each film */}
    {scheduleBlocks.map((block) => (
      block.films.map((film, index) => (
        <div id={`modal-${block.name.replace(/\s+/g, '-')}-${index}`} class="modal">
          <div class="modal-content">
            <span class="close-button">&times;</span>
            <h3 class="film-modal-title">{film.title}</h3>
            <p class="modal-detail"><strong>Director:</strong> {film.director}</p>
            <p class="modal-detail"><strong>Runtime:</strong> {film.runtime}</p>
            <p class="modal-detail"><strong>Country:</strong> {film.country}</p>
            {film.award && <p class="modal-award">{film.award}</p>}
            <p class="modal-synopsis">{film.synopsis}</p>
          </div>
        </div>
      ))
    ))}
    
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Get all film boxes
        const filmBoxes = document.querySelectorAll('.film-box');
        
        // Get all modals
        const modals = document.querySelectorAll('.modal');
        
        // Get all close buttons
        const closeButtons = document.querySelectorAll('.close-button');
        
        // Add click event to each film box
        filmBoxes.forEach(box => {
          box.addEventListener('click', () => {
            const index = box.getAttribute('data-index');
            const modal = document.getElementById(`modal-${index}`);
            if (modal) {
              (modal as HTMLElement).style.display = 'block';
              document.body.style.overflow = 'hidden'; // Prevent scrolling
            }
          });
        });
        
        // Add click event to each close button
        closeButtons.forEach(button => {
          button.addEventListener('click', () => {
            const modal = button.closest('.modal');
            if (modal) {
              (modal as HTMLElement).style.display = 'none';
              document.body.style.overflow = 'auto'; // Re-enable scrolling
            }
          });
        });
        
        // Close modal when clicking outside content
        window.addEventListener('click', (event) => {
          modals.forEach(modal => {
            if (event.target === modal) {
              (modal as HTMLElement).style.display = 'none';
              document.body.style.overflow = 'auto'; // Re-enable scrolling
            }
          });
        });
      });
    </script>
    
