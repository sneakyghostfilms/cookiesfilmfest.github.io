---
import "@fontsource-variable/inter";
import Event from "../components/event.astro";
import Awards from "../components/awards.astro";
import Submission from "../components/submission.astro";
import Header from "../components/header.astro";
import Mission from "../components/mission.astro";
import Contact from "../components/contact.astro";
import Splash from "../components/splash.astro";
import "../styles/index.css";

const { generator, site } = Astro;
const image = new URL("/splash_screen_thumbnail.jpg", site).href;
const wwwimage = image.startsWith("https://cookiesfilmfest.com")
    ? image.replace("https://", "https://www.")
    : image;
const description = "Join us for some cookie-crumbling comedy films in Pittsburgh!";
---
<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={generator} />

    <title>Cookies and Comedy Film Festival</title>
    <meta name="description" content={description} />

    <!-- social media -->
    <meta property="og:title" content="Cookies and Comedy Film Festival" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={wwwimage} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600;700&display=swap" rel="stylesheet">
  </head>

  <body class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white">
    <Header />
    <Splash />
    <div class="mx-auto max-w-5xl px-8 py-24 space-y-16">
      <Mission />
      <Event />
      <Awards />
      <Submission />
      <Contact />
    </div>
  </body>
</html>