---
import SectionLayout from "../layouts/section-layout.astro";
import ContactForm from "../components/contactform.astro";
---
<SectionLayout title="Contact Us" id="contact">
  <Fragment slot="content">
    <div class="flex justify-center items-center mb-8">
      <a href="https://www.facebook.com/CookiesAndComedy" target="_blank" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-700">
        Follow us on Facebook
      </a>
    </div>
    <p class="mb-4 text-left text-white">
      You can reach out to us via email or use the contact form below.
    </p>
    <p class="mb-8 text-left text-white">
      Email: <a href="mailto:info@cookiesfilmfest.com" class="text-blue-400 underline">info@cookiesfilmfest.com</a>
    </p>
    <ContactForm />
  </Fragment>
</SectionLayout>
