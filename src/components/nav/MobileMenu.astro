---
import { Icon } from "astro-icon/components";
import type { NavItem } from "~/types";

interface Props {
  navItems: NavItem[];
  pastEvents: Array<{ href: string; text: string }>;
  modalId?: string;
}

const { navItems, pastEvents, modalId = 'menu-modal' } = Astro.props;
---

<button
  id="open-nav-button"
  type="button"
  class="btn-nav mobile-menu-trigger"
  aria-label="Open navigation"
>
  <Icon name="mdi:menu" class="size-8" />
</button>

<div id={modalId} class="modal hidden" aria-hidden="true">
  <div class="mobile-menu-overlay">
    <div class="mobile-menu-container">
      <div class="mobile-menu-header">
        <button
          id="close-nav-button"
          type="button"
          class="btn-nav mobile-close-btn"
          aria-label="Close navigation"
        >
          <Icon name="mdi:close" class="size-8" />
        </button>
      </div>
      <div class="mobile-menu-content">
        <ul class="mobile-menu-list">
          {navItems.map(({ title, url }) => (
            <li class="mobile-menu-item">
              <a class="mobile-menu-link" href={url}>{title}</a>
            </li>
          ))}
          <li class="mobile-menu-item">
            <div class="mobile-dropdown">
              <button class="mobile-dropdown-title">
                Past Events <span class="dropdown-arrow">â–¼</span>
              </button>
              <div class="mobile-dropdown-content">
                {pastEvents.map((event) => (
                  <a class="mobile-menu-link mobile-submenu-link" href={event.href}>
                    {event.text}
                  </a>
                ))}
              </div>
            </div>
          </li>
          <li class="mobile-menu-item">
            <a class="mobile-menu-link" href="/pa-festivals">PA Fests</a>
          </li>
          <li class="mobile-menu-item">
            <a class="mobile-menu-link" href="/comedy-festivals">Comedy Fests</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
  import MicroModal from "micromodal";

  function initMobileMenu() {
    const menuModalId = "menu-modal";
    const modal = document.getElementById(menuModalId);
    const openNavButton = document.querySelector("#open-nav-button");
    const closeNavButton = document.querySelector("#close-nav-button");
    const menu = document.querySelector(`#${menuModalId} ul`);

    // Move modal to body to escape header's stacking context
    if (modal && modal.parentElement !== document.body) {
      document.body.appendChild(modal);
    }

    if (!openNavButton || !closeNavButton || !menu) return;

    const openMenu = () => MicroModal.show(menuModalId, { disableScroll: true });
    const closeMenu = () => MicroModal.close(menuModalId);

    openNavButton.addEventListener("click", openMenu);
    closeNavButton.addEventListener("click", closeMenu);

    // Close menu when clicking a link
    menu.addEventListener("click", (event) => {
      if ((event.target as HTMLElement).tagName === "A") {
        closeMenu();
      }
    });

    // Mobile dropdown toggle
    const mobileDropdown = document.querySelector('.mobile-dropdown-title');
    const mobileDropdownContent = document.querySelector('.mobile-dropdown-content');

    if (mobileDropdown && mobileDropdownContent) {
      mobileDropdown.addEventListener('click', () => {
        mobileDropdownContent.classList.toggle('show-mobile');
        mobileDropdown.classList.toggle('active');
      });
    }

    // Initialize MicroModal
    MicroModal.init({
      onShow: () => {
        document.body.style.overflow = 'hidden';
      },
      onClose: () => {
        document.body.style.overflow = '';
      },
      disableScroll: true,
      disableFocus: false,
      awaitOpenAnimation: false,
      awaitCloseAnimation: false,
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu);
  } else {
    initMobileMenu();
  }
  document.addEventListener('astro:page-load', initMobileMenu);
</script>

<noscript>
  <style>
    #open-nav-button { display: none; }
  </style>
</noscript>

<style>
  /* Hide hamburger by default */
  .mobile-menu-trigger {
    display: none !important;
  }

  /* Show hamburger on narrow screens OR short screens */
  @media (max-width: 1000px), (max-height: 900px) {
    .mobile-menu-trigger {
      display: flex !important;
    }
  }

  /* Only hide hamburger if BOTH wide enough AND tall enough */
  @media (min-width: 1001px) and (min-height: 901px) {
    .mobile-menu-trigger {
      display: none !important;
    }
  }

  .btn-nav {
    background-color: var(--color-primary);
    color: white;
    box-shadow: var(--shadow-md);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
    padding: 0.5rem;
    border: 1px solid var(--color-primary-dark);
  }

  .btn-nav:hover {
    background-color: var(--color-primary-dark);
    box-shadow: var(--shadow-lg);
  }

  .modal {
    display: none;
  }

  .modal.hidden {
    display: none;
  }

  /* Need !important to override Tailwind's hidden class */
  .modal.is-open {
    display: block !important;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
    z-index: 9999;
    background-color: var(--color-background);
    overflow: hidden;
  }

  .mobile-menu-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    background-color: var(--color-background);
    overflow-y: auto;
  }

  .mobile-menu-container {
    width: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    background-color: var(--color-background);
    padding: 1rem;
  }

  .mobile-menu-header {
    display: flex;
    justify-content: flex-end;
    padding: 0.5rem 0 1rem 0;
    background-color: var(--color-background);
  }

  .mobile-menu-content {
    flex: 1;
  }

  .mobile-menu-list {
    list-style: none;
    margin: 0;
    padding: 1rem 0.5rem;
    display: flex;
    flex-direction: column;
  }

  .mobile-menu-item {
    width: 100%;
    margin: 0 0 1rem 0;
  }

  .mobile-menu-link {
    display: block;
    width: 100%;
    padding: 1rem;
    text-align: center;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-secondary);
    background-color: var(--color-background-offset);
    border-radius: 2rem;
    text-decoration: none;
    border: 2px solid transparent;
    transition: all 0.2s ease;
    box-shadow: var(--shadow-md);
  }

  .mobile-dropdown {
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .mobile-dropdown-title {
    display: flex;
    width: 100%;
    padding: 1rem;
    justify-content: center;
    align-items: center;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-secondary);
    background-color: var(--color-background-offset);
    border-radius: 2rem;
    cursor: pointer;
    border: 2px solid transparent;
    font-family: 'Fredoka', sans-serif;
    box-shadow: var(--shadow-md);
  }

  .mobile-dropdown-title .dropdown-arrow {
    margin-left: 0.5rem;
    font-size: 0.7rem;
    transition: transform 0.2s ease;
  }

  .mobile-dropdown-title.active .dropdown-arrow {
    transform: rotate(180deg);
  }

  .mobile-dropdown-content {
    display: none;
    margin-top: 1rem;
  }

  .mobile-dropdown-content.show-mobile {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mobile-submenu-link {
    background-color: var(--color-background);
    font-size: 1rem;
  }
</style>
