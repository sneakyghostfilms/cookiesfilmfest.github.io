---
import { Image } from 'astro:assets';
import cookieTableImage from '../assets/cookie-table.jpg';
import filmFestivalText from '../assets/cookies-and-comedy-text.svg';
---
<section class="relative h-screen overflow-hidden">
  <div class="relative h-full w-full">
    <Image src={cookieTableImage} alt="Cookie Table" class="w-full h-full object-cover transition-transform animate-scale" />
    <div class="overlay"></div>
    <div class="absolute center responsive-container">
      <Image src={filmFestivalText} alt="Film Festival" class="responsive-image animate-fade-in" />
      <div class="tagline responsive-text animate-fade-in animate-delay-300">
        Come for the laughs! Stay for the cookies!
      </div>
      <div class="scroll-indicator animate-fade-in animate-delay-600">
        <a href="#mission" aria-label="Scroll to learn more" class="scroll-button">
          <span class="scroll-text">Scroll to learn more</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="bounce">
            <path d="M7 13l5 5 5-5"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .absolute {
    position: absolute;
  }

  .center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .overlay {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(43, 34, 68, 0.25); /* Reduced opacity from 0.35 to 0.25 */
    box-shadow: inset 0 0 150px rgba(0, 0, 0, 0.3); /* Reduced shadow opacity from 0.5 to 0.3 */
  }

  .responsive-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    text-align: center;
    z-index: 10;
  }

  .responsive-image {
    width: 90%;
    max-width: 800px;
    filter: drop-shadow(0 8px 24px rgba(0, 0, 0, 0.4));
  }

  .tagline {
    font-family: 'Nunito Sans', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: #fbe3c4; /* Light cookie-dough beige */
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.8);
    letter-spacing: 0.03em;
  }

  .scroll-indicator {
    margin-top: 2rem;
  }

  .scroll-indicator a {
    color: #fbe3c4;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
    transition: transform 0.3s ease;
  }

  .scroll-button {
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    background-color: rgba(215, 155, 88, 0.3);
    backdrop-filter: blur(3px);
    border: 1px solid rgba(215, 155, 88, 0.5);
    transition: all 0.3s ease;
  }

  .scroll-button:hover {
    transform: translateY(5px);
    background-color: rgba(215, 155, 88, 0.5);
  }

  .scroll-text {
    font-size: 0.9rem;
    font-weight: 600;
  }

  .bounce {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-5px);
    }
    60% {
      transform: translateY(-3px);
    }
  }
  
  /* Animation for the image and elements */
  .animate-scale {
    animation: scale 20s ease-in-out infinite alternate;
  }
  
  @keyframes scale {
    from { transform: scale(1); }
    to { transform: scale(1.1); }
  }
  
  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
    opacity: 0;
  }
  
  .animate-delay-300 {
    animation-delay: 300ms;
  }
  
  .animate-delay-600 {
    animation-delay: 600ms;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 768px) {
    .responsive-image {
      width: 95%;
      max-width: 850px;
    }

    .tagline {
      font-size: 1.4rem;
    }
    
    .scroll-indicator {
      margin-top: 1.5rem;
    }
  }

  @media (orientation: landscape) and (max-width: 768px) {
    .responsive-container {
      gap: 1rem;
    }
    
    .scroll-indicator {
      margin-top: 0.5rem;
    }
  }

  @media (min-width: 1024px) {
    .responsive-image {
      max-width: 1500px;
    }

    .tagline {
      font-size: 2.25rem;
    }
  }
</style>
