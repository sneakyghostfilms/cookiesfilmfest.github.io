---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
import "@fontsource/caveat"; // Import the Caveat font
---

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8"
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-extrabold tracking-tight text-6xl font-caveat p-5"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-xl text-center font-extrabold text-2xl font-caveat p-5">
    <slot name="lead" />
  </p>
  <slot />
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Caveat:wght@700&display=swap'); /* Ensure the font is loaded */

  .gradient-text {
    background: linear-gradient(45deg, #ff8a00, #e52e71);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .font-caveat {
    font-family: 'Caveat', cursive;
  }
</style>
