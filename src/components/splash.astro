---
import RotatingLogo from './RotatingLogo.astro';
---
<section class="splash-section splash-bg">
  <div class="splash-content">
    <div class="festival-loop" aria-label="Festival date and venue">
      <span class="festival-loop-item festival-loop-date">March 14</span>
      <span class="festival-loop-item festival-loop-venue">Harris Theater</span>
    </div>
    <div class="logo-wrapper animate-fade-in">
      <RotatingLogo size={800} />
    </div>
    <div class="tagline" aria-label="Come for the laughs! Stay for the cookies!">
      <div class="tagline-line tagline-line-1">Come for the laughs!</div>
      <div class="tagline-line tagline-line-2">Stay for the cookies!</div>
    </div>
    <div class="scroll-indicator animate-fade-in animate-delay-600">
      <a href="#mission" aria-label="Scroll to learn more" class="scroll-arrow">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="bounce">
          <path d="M7 10l5 5 5-5"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .splash-section {
    /* Use 100vh but reserve space for nav bar at bottom */
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height for mobile */
    padding-bottom: 80px; /* Reserve space for nav bar */
    box-sizing: border-box;
    overflow: hidden;
  }

  .splash-bg {
    background: radial-gradient(ellipse at 50% 40%, #4a3520 0%, #2a1a0a 25%, #120a04 50%, #000000 75%);
    border-radius: 0;
  }

  .splash-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 10;
    padding: 1rem;
    box-sizing: border-box;
  }

  .logo-wrapper {
    /* Use min() to scale with whichever dimension is more constrained */
    width: min(50vw, 55vh);
    max-width: 1200px; /* Allow logo to grow larger on big screens */
    filter: drop-shadow(0 8px 32px rgba(0, 0, 0, 0.6));
    flex-shrink: 1; /* Allow shrinking if needed */
  }

  .festival-loop {
    position: relative;
    width: 100%;
    height: 2.6rem;
    margin-bottom: 0.5rem;
    flex-shrink: 0;
  }

  .festival-loop-item {
    position: absolute;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
    font-family: 'Nunito Sans', sans-serif;
    font-weight: 700;
    font-size: clamp(1.26rem, 3.12vw, 1.92rem);
    color: #c69c6d;
    text-shadow: 0 4px 18px rgba(0, 0, 0, 0.35);
    opacity: 0;
    white-space: nowrap;
    letter-spacing: 0.01em;
  }

  .festival-loop-date {
    animation: festivalDateLoop 7.8s ease-in-out infinite;
  }

  .festival-loop-venue {
    animation: festivalVenueLoop 7.8s ease-in-out infinite;
  }

  /* No cross-fade: each line fully fades out before the next fades in */
  @keyframes festivalDateLoop {
    0% { opacity: 0; }
    10% { opacity: 1; }
    40% { opacity: 1; }
    50% { opacity: 0; }
    100% { opacity: 0; }
  }

  @keyframes festivalVenueLoop {
    0% { opacity: 0; }
    55% { opacity: 0; }
    65% { opacity: 1; }
    90% { opacity: 1; }
    100% { opacity: 0; }
  }

  @media (prefers-reduced-motion: reduce) {
    .festival-loop {
      height: auto;
      margin-bottom: 0.75rem;
    }

    .festival-loop-item {
      position: static;
      transform: none;
      opacity: 1;
      animation: none;
      display: inline;
    }

    .festival-loop-venue::before {
      content: ' â€¢ ';
      opacity: 0.85;
    }
  }

  .tagline {
    font-family: 'Fredoka', sans-serif;
    font-size: clamp(1rem, 2.5vw, 2.25rem);
    font-weight: 500;
    color: #c69c6d;
    text-shadow: 0 4px 18px rgba(0, 0, 0, 0.4);
    letter-spacing: 0.02em;
    margin-top: -2rem;
    position: relative;
    z-index: 20;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.35em;
    line-height: 1.2;
    --tagline-stagger: clamp(0.8rem, 6vw, 2.4rem);
    --tagline-line-duration: 650ms;
    --tagline-line-1-delay: 1100ms;
    --tagline-line-gap: 0ms;
  }

  .tagline-line {
    opacity: 0;
    animation: taglineFade var(--tagline-line-duration) ease-out forwards;
  }

  .tagline-line-1 {
    animation-delay: var(--tagline-line-1-delay);
    transform: translateX(calc(-1 * var(--tagline-stagger)));
  }

  .tagline-line-2 {
    animation-delay: calc(var(--tagline-line-1-delay) + var(--tagline-line-duration) + var(--tagline-line-gap));
    animation-duration: 325ms;
    transform: translateX(var(--tagline-stagger));
  }

  @keyframes taglineFade {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .scroll-indicator {
    margin-top: 1.5rem;
    flex-shrink: 0;
  }

  .scroll-arrow {
    color: #fbe3c4;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .scroll-arrow:hover {
    opacity: 1;
    transform: translateY(3px);
  }

  .bounce {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-5px);
    }
    60% {
      transform: translateY(-3px);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
    opacity: 0;
  }

  .animate-delay-300 {
    animation-delay: 300ms;
  }

  .animate-delay-600 {
    animation-delay: 600ms;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* On screens where hamburger menu is shown (1000px and below) */
  @media (max-width: 1000px) {
    .splash-section {
      padding-bottom: 100px; /* Just enough for hamburger + follow button row */
    }

    .logo-wrapper {
      width: min(70vw, 45vh);
    }

    .festival-loop {
      margin-bottom: 0.4rem;
    }

    .tagline {
      margin-top: -1.5rem;
    }

    .scroll-indicator {
      margin-top: 1rem;
    }
  }

  @media (max-width: 500px) {
    .logo-wrapper {
      width: min(75vw, 40vh);
    }
  }

  @media (max-width: 400px) {
    .logo-wrapper {
      width: min(80vw, 35vh);
    }
  }

  /* Landscape orientation - prioritize height */
  @media (orientation: landscape) and (max-height: 600px) {
    .logo-wrapper {
      width: min(40vw, 50vh);
    }

    .tagline {
      margin-top: -1rem;
      font-size: clamp(0.9rem, 2vw, 1.5rem);
    }

    .scroll-indicator {
      margin-top: 0.75rem;
    }
  }
</style>
