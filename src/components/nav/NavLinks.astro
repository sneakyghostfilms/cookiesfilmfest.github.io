---
import type { NavItem } from '~/types';

interface Props {
  navItems: NavItem[];
}

const { navItems } = Astro.props;
---

<nav class="nav-desktop">
  <ul class="nav-list">
    {navItems.map(({ title, url }) => (
      <li class="nav-item">
        <a class="menu-link" href={url}>{title}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .nav-desktop {
    display: block;
  }

  .nav-list {
    display: flex;
    flex-wrap: wrap;
    align-items: end;
    gap: 0.6rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  :global(.fixed-header) .nav-list {
    align-items: center;
  }

  :global(.fixed-header) .nav-item {
    padding-bottom: 0;
  }

  .nav-item {
    margin: 0 0.3rem;
    padding-bottom: 0.125rem;
  }

  .menu-link {
    color: #fbe3c4;
    padding: 0.35rem 0.25rem;
    font-family: 'Nunito Sans', sans-serif;
    font-weight: 600;
    font-size: 1.045rem;
    text-decoration: none;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8), 0 0 12px rgba(215, 155, 88, 0.5);
    transition: color 0.2s ease, opacity 0.2s ease;
    white-space: nowrap;
    display: inline-flex;
    line-height: 1.5;
    position: relative;
  }

  .menu-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -2px;
    left: 0;
    background-color: var(--color-primary);
    transition: width 0.3s ease;
  }

  .menu-link:hover {
    color: white;
  }

  .menu-link:hover::after {
    width: 100%;
  }

  /* Hide nav on narrow screens OR short screens */
  @media (max-width: 1000px), (max-height: 900px) {
    .nav-desktop {
      display: none !important;
    }
  }

  /* Only show nav if BOTH wide enough AND tall enough */
  @media (min-width: 1001px) and (min-height: 901px) {
    .nav-desktop {
      display: block !important;
    }
  }
</style>
