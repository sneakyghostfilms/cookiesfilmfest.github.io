---
import RotatingLogo from './RotatingLogo.astro';
---
<section class="splash-section splash-bg">
  <div class="splash-content">
    <div class="logo-wrapper animate-fade-in">
      <RotatingLogo size={800} />
    </div>
    <div class="tagline animate-fade-in animate-delay-300">
      Come for the laughs! Stay for the cookies!
    </div>
    <div class="scroll-indicator animate-fade-in animate-delay-600">
      <a href="#mission" aria-label="Scroll to learn more" class="scroll-button">
        <span class="scroll-text">Scroll to learn more</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="bounce">
          <path d="M7 13l5 5 5-5"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .splash-section {
    /* Use 100vh but reserve space for nav bar at bottom */
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height for mobile */
    padding-bottom: 80px; /* Reserve space for nav bar */
    box-sizing: border-box;
    overflow: hidden;
  }

  .splash-bg {
    background: radial-gradient(ellipse at 50% 40%, #4a3520 0%, #2a1a0a 25%, #120a04 50%, #000000 75%);
    border-radius: 0;
  }

  .splash-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 10;
    padding: 1rem;
    box-sizing: border-box;
  }

  .logo-wrapper {
    /* Use min() to scale with whichever dimension is more constrained */
    width: min(50vw, 55vh);
    max-width: 1200px; /* Allow logo to grow larger on big screens */
    filter: drop-shadow(0 8px 32px rgba(0, 0, 0, 0.6));
    flex-shrink: 1; /* Allow shrinking if needed */
  }

  .tagline {
    font-family: 'Nunito Sans', sans-serif;
    font-size: clamp(1rem, 2.5vw, 2.25rem);
    font-weight: 700;
    color: #fbe3c4;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.8);
    letter-spacing: 0.03em;
    margin-top: -2rem;
    position: relative;
    z-index: 20;
    flex-shrink: 0;
  }

  .scroll-indicator {
    margin-top: 1.5rem;
    flex-shrink: 0;
  }

  .scroll-indicator a {
    color: #fbe3c4;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
    transition: transform 0.3s ease;
  }

  .scroll-button {
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    background-color: rgba(215, 155, 88, 0.3);
    backdrop-filter: blur(3px);
    border: 1px solid rgba(215, 155, 88, 0.5);
    transition: all 0.3s ease;
  }

  .scroll-button:hover {
    transform: translateY(5px);
    background-color: rgba(215, 155, 88, 0.5);
  }

  .scroll-text {
    font-size: 0.9rem;
    font-weight: 600;
  }

  .bounce {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-5px);
    }
    60% {
      transform: translateY(-3px);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
    opacity: 0;
  }

  .animate-delay-300 {
    animation-delay: 300ms;
  }

  .animate-delay-600 {
    animation-delay: 600ms;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* When nav wraps to multiple lines, increase padding */
  @media (max-width: 900px) {
    .splash-section {
      padding-bottom: 120px;
    }
  }

  @media (max-width: 600px) {
    .splash-section {
      padding-bottom: 200px; /* 2 rows of buttons */
    }

    .logo-wrapper {
      width: min(70vw, 45vh);
    }

    .tagline {
      margin-top: -1.5rem;
    }

    .scroll-indicator {
      margin-top: 1rem;
    }
  }

  @media (max-width: 500px) {
    .splash-section {
      padding-bottom: 240px; /* 3 rows of buttons */
    }

    .logo-wrapper {
      width: min(75vw, 40vh);
    }
  }

  @media (max-width: 400px) {
    .splash-section {
      padding-bottom: 280px; /* 3+ rows of buttons */
    }

    .logo-wrapper {
      width: min(80vw, 35vh);
    }
  }

  /* Landscape orientation - prioritize height */
  @media (orientation: landscape) and (max-height: 600px) {
    .logo-wrapper {
      width: min(40vw, 50vh);
    }

    .tagline {
      margin-top: -1rem;
      font-size: clamp(0.9rem, 2vw, 1.5rem);
    }

    .scroll-indicator {
      margin-top: 0.75rem;
    }
  }
</style>
